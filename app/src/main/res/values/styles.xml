        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>

    <style name="MenuCastomStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/icon_button_tint</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>

    <style name="CastomCloseEditor" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/close_red</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
